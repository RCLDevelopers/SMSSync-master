<resources>
    <attr name="photoItemForeground" format="reference"/>
    <attr name="lineColorDivider" format="reference|color"/>
    <declare-styleable name="TagView">
        <attr name="tagTextColor" format="color"/>
        <attr name="tagTextSize" format="dimension"/>
        <attr name="isActionAnimated" format="boolean"/>
        <attr name="tagCornerRadius" format="dimension"/>
        <attr name="tagMargin" format="dimension"/>
        <attr name="textPaddingLeft" format="dimension"/>
        <attr name="textPaddingRight" format="dimension"/>
        <attr name="textPaddingTop" format="dimension"/>
        <attr name="textPaddingBottom" format="dimension"/>
        <attr name="tagDrawablePadding" format="dimension"/>
        <attr name="tagUppercase" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="FilterView">
        <attr name="keywordTextColor" format="color"/>
        <attr name="keywordTextSize" format="dimension"/>
        <attr name="keywordText" format="string" localization="suggested"/>
        <attr name="keywordIcon" format="reference"/>
        <attr name="keywordDrawablePadding" format="dimension"/>
        <attr name="keywordCounterTextColor" format="color"/>
        <attr name="keywordCounterTextSize" format="dimension"/>
        <attr name="keywordCounterDrawablePadding" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="FilterKeywords">
        <attr name="filterTitleText" format="string" localization="suggested"/>
        <attr name="filterTitleIcon" format="reference"/>
        <attr name="filterKeywordTextColor" format="reference|color"/>
        <attr name="filterKeywordTextSize" format="dimension"/>
        <attr name="filterKeywordText" format="string" localization="suggested"/>
        <attr name="filterKeywordIcon" format="reference"/>
        <attr name="filterKeywordDrawablePadding" format="dimension"/>
        <attr name="filterKeywordCounterTextColor" format="reference|color"/>
        <attr name="filterKeywordCounterTextSize" format="dimension"/>
        <attr name="filterKeywordCounterDrawablePadding" format="dimension"/>
    </declare-styleable>
</resources>