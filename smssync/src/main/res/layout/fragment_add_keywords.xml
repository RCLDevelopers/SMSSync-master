<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/view_spacing_large"
                android:paddingRight="@dimen/view_spacing_large"
                android:paddingTop="@dimen/view_spacing_large"
                android:paddingBottom="@dimen/view_spacing_xlarge"
                android:text="@string/filter_prompt"/>
        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/filter_keyword_integration_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/view_spacing_large"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="Custom Web Service"
                android:layout_marginBottom="@dimen/view_spacing_xlarge"
                android:drawablePadding="@dimen/view_spacing_xlarge"
                android:drawableStart="@drawable/ic_web_grey_900_24dp"
                android:drawableLeft="@drawable/ic_web_grey_900_24dp"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/view"/>

        <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_spacing_xlarge"
                android:padding="@dimen/view_spacing_large"
                android:text="@string/keywords"/>
        <org.addhen.smssync.presentation.view.ui.widget.KeywordView
                android:id="@+id/keywords_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|center_horizontal"
                android:padding="@dimen/view_spacing_large"/>
        <android.support.v7.widget.AppCompatButton
                android:id="@+id/add_keyword_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_keyword"
                android:padding="@dimen/view_spacing_large"
                style="?attr/buttonBarButtonStyle"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>